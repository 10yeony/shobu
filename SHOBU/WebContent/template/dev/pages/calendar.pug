extends ../components/base/_skeleton
include ../components/rd-navbar/_rd-navbar
include ../components/breadcrumbs/_breadcrumbs

block variables
	- pageName = 'Calendar';

block page
	header.section.page-header
		+rd-navbar

	section.topbar
		+breadcrumbs( breadcrumbs )

	section.section-md
		.container-fluid
			.row.row-30
				.col-lg-4.col-xl-3.order-lg-2
					.panel
						.panel-header
							h3
								span.panel-icon.fa-calendar-check-o
								span Calendar Events
						.panel-body
							.row.row-10
								.col-12.col-sm-6.col-lg-12
									h5  Simple Events:
									.external-events.events-list
										.fc-event.fc-event-primary( data-event='primary' )
											.fc-event-icon
												span.fa.fa-exclamation
											.fc-event-desc Meeting With Mike
										.fc-event.fc-event-danger( data-event='danger' )
											.fc-event-icon
												span.fa.fa-info
											.fc-event-desc Meeting With Mike
										.fc-event.fc-event-success( data-event='success' )
											.fc-event-icon
												span.fa.fa-check
											.fc-event-desc Meeting With Mike
										.fc-event.fc-event-light( data-event='light' )
											.fc-event-icon
												span.fa.fa-question
											.fc-event-desc Meeting With Mike
								.col-12.col-sm-6.col-lg-12
									h5  Reoccuring Events:
									.external-events.events-list
										.fc-event.fc-event-alert.event-recurring
											.fc-event-icon
												span.fa.fa-clock-o
											.fc-event-desc Meeting With Mike
										.fc-event.fc-event-system.event-recurring
											.fc-event-icon
												span.fa.fa-bell-o
											.fc-event-desc Meeting With Mike
				.col-lg-8.col-xl-9.order-lg-1
					.panel
						.panel-header
							h3
								span.panel-icon.fa-calendar-check-o
								span Calendar
						.panel-body
							.fullcalendar( data-fullcalendar-event!=[
								{
									title: 'Sony Meeting',
									start: '2019-08-06',
									className: 'fc-event-success'
								},
								{
									title: 'Conference',
									start: '2019-08-14',
									end: '2019-08-16',
									className: 'fc-event-warning'
								},
								{
									title: 'System Testing',
									start: '2019-07-26',
									end: '2019-07-28',
									className: 'fc-event-primary'
								}
							] )
